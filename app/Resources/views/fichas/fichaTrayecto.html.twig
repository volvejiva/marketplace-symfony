{% extends "base.html.twig" %}

{% block contenido %}
    <div class="item-list job-item">
        <div class="col-sm-1  col-xs-2 no-padding photobox">
            <div class="add-image"><a href=""><img class="thumbnail no-margin" src="{{ trayecto.conductor.avatar }}" alt="Avatar de {{ trayecto.conductor.username }}"></a></div>
        </div>
        <!--/.photobox-->
        <div class="col-sm-10  col-xs-10  add-desc-box">
            <div class="add-details jobs-item">
                <h5 class="company-title">Usuario: <a href="{{ path('public_fichaUsuario', {'persona': trayecto.conductor.id }) }}">{{ trayecto.conductor.username }}</a></h5>
                <h4 class="job-title">{{ trayecto.origen }} a {{ trayecto.destino }}</h4>
                <h5 class="company-title">Trayecto creado: {{ trayecto.createdAt|date('d/m/Y') }}</h5>
                <h5 class="company-title">Trayecto modificado: {{ trayecto.updatedAt|date('d/m/Y') }}</h5>
                <span class="info-row">
                    <span class="item-location"><i class="fa fa-map-marker"></i> {{ trayecto.calle }} </span> 
                    <span class="date"><i class=" icon-clock"> </i>{{ trayecto.horaDeViaje|date('H:i') }}</span>
                    <span class="salary"><i class=" icon-money"> </i> {{ trayecto.precio }}â‚¬</span>
                    <span class="date"><i class="icon-calendar"> </i> {{ trayecto.fechaDeViaje|date('d M Y') }}</span>
                </span>
                <div class="jobs-desc">
                    {{ trayecto.descripcion }}
                </div>
                
                <div class="job-actions">
                    <ul class="list-unstyled list-inline">
                        <li>
                            <span class="save-job">
                                <span class="fa fa-users"></span>
                                {{ trayecto.plazas }} plazas
                                {% block filtro %}
                                    {% include 'fichas/filtros.html.twig' %}
                                {% endblock %}
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--/.add-desc-box-->
        <!--/.add-desc-box-->
    </div>
    <br><center><a href="{{ path('list') }}"><button type="button" class="btn btn-primary">Volver</button></a></center><br>
{% endblock %}